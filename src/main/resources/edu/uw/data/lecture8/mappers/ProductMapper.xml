<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="edu.uw.data.lecture8.mappers.ProductMapper">


    <!-- TODO CACHE LAB enable EhCache or LoggingEhCache -->
    <!--
    <cache type="org.mybatis.caches.ehcache.LoggingEhcache"/>
    -->



    <resultMap id="ProductResult" type="Product">
        <result property="productCode" column="PRODUCT_CODE"/>
        <result property="productName" column="PRODUCT_NAME"/>
        <result property="productLine" column="PRODUCT_LINE"/>
        <result property="productScale" column="PRODUCT_SCALE"/>
        <result property="productVendor" column="PRODUCT_VENDOR"/>
        <result property="productDescription" column="PRODUCT_DESCRIPTION"/>
        <result property="quantityInStock" column="QUANTITY_IN_STOCK"/>
        <result property="buyPrice" column="BUY_PRICE"/>
        <result property="msrp" column="MSRP"/>
    </resultMap>

    <select id="findAllProducts"  resultType= "edu.uw.data.lecture8.model.Product" resultMap="ProductResult">
       select * from PRODUCTS
    </select>


</mapper>