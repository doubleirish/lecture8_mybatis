<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="edu.uw.data.lecture8.mappers.ProductMapper">


    <!--
    Class Product {
          private String productCode;
          private String productName;
          private String productLine;
          private String productScale;
          private String productVendor;
          private String productDescription;
          private Integer quantityInStock;
          private Double buyPrice;
          private Double msrp;

      CREATE TABLE PRODUCTS
        (
            PRODUCT_CODE VARCHAR(15),
            PRODUCT_NAME VARCHAR(70),
            PRODUCT_LINE VARCHAR(50),
            PRODUCT_SCALE VARCHAR(10),
            PRODUCT_VENDOR VARCHAR(50),
            PRODUCT_DESCRIPTION LONG VARCHAR,
            QUANTITY_IN_STOCK INT,
            BUY_PRICE FLOAT(52),
            MSRP FLOAT(52)
        );

    -->


    <resultMap id="ProductResult" type="Product">
        <result property="productCode" column="PRODUCT_CODE"/>
        <result property="productName" column="PRODUCT_NAME"/>
        <result property="productLine" column="PRODUCT_LINE"/>
        <result property="productScale" column="PRODUCT_SCALE"/>
        <result property="productVendor" column="PRODUCT_VENDOR"/>
        <result property="productDescription" column="PRODUCT_DESCRIPTION"/>
        <result property="quantityInStock" column="QUANTITY_IN_STOCK"/>
        <result property="buyPrice" column="BUY_PRICE"/>
        <result property="msrp" column="MSRP"/>
    </resultMap>

    <select id="findAllProducts"  resultType= "edu.uw.data.lecture8.model.Product" resultMap="ProductResult">
       select * from PRODUCTS
    </select>


</mapper>